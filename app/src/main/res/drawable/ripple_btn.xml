<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#52E6CC">
    <item>

        <layer-list>

            <item>
                <shape android:shape="oval">
                    <gradient
                        android:angle="45"
                        android:endColor="#B5F0E9"
                        android:centerColor="#52E6CC"
                        android:startColor="#15E0BA"
                        android:type="linear"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/start_btn"
                android:gravity="center"
                android:width="160dp"
                android:height="160dp">
            </item>
        </layer-list>

    </item>
</ripple>